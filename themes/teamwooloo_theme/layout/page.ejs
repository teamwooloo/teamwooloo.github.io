<div class="page-inner">
    <div class="card-block">
        <% if (page.link || page.title){ %>
            <header class="card-title">
                <a href="<%- url_for(page.path) %>" class="deco-none">
                    <h1><%= page.title %></h1>
                </a>
            </header>
        <% } %>
    </div>

    <div class="card-block">
        <%- page.content %>
    </div>

    <footer class="card-footer">
        <div class="pull-right"> <%- partial('_partial/share') %></div>
    </footer>

    <% if(page.has_download){ %>
        <script src="/js/download_link.js" defer></script>
    <% } %>

</div>
